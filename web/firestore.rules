rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profile matching
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Collaborations
    match /collaborations/{collaborationId} {
      allow read: if request.auth != null && (
        resource.data.inviterId == request.auth.uid || 
        resource.data.inviteeId == request.auth.uid ||
        resource.data.inviteeEmail == request.auth.token.email
      );
      // Allow any auth user to create invites (they must manage their own data model in app)
      allow create: if request.auth != null;
      allow delete: if request.auth != null && (
        resource.data.inviterId == request.auth.uid || 
        resource.data.inviteeId == request.auth.uid || 
        resource.data.inviteeEmail == request.auth.token.email
      );
    }
    
    match /lists/{listId} {
      allow read, write: if request.auth != null && (
        resource == null || 
        resource.data.userId == request.auth.uid || 
        (resource.data.collaborators != null && request.auth.uid in resource.data.collaborators) ||
        exists(/databases/$(database)/documents/collaborations/$(resource.data.userId + "_" + request.auth.uid)) ||
        (request.auth.token.email != null && exists(/databases/$(database)/documents/collaborations/$(resource.data.userId + "_" + request.auth.token.email)))
      );
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /items/{itemId} {
      allow read, write, delete: if request.auth != null && (
        resource == null || 
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/lists/$(resource.data.listId)).data.userId == request.auth.uid ||
        // Check list access via collaboration (UID or Email)
        exists(/databases/$(database)/documents/collaborations/$(get(/databases/$(database)/documents/lists/$(resource.data.listId)).data.userId + "_" + request.auth.uid)) ||
        (request.auth.token.email != null && exists(/databases/$(database)/documents/collaborations/$(get(/databases/$(database)/documents/lists/$(resource.data.listId)).data.userId + "_" + request.auth.token.email)))
      );
      allow create: if request.auth != null && (
        request.resource.data.userId == request.auth.uid &&
        (
          get(/databases/$(database)/documents/lists/$(request.resource.data.listId)).data.userId == request.auth.uid ||
          request.auth.uid in get(/databases/$(database)/documents/lists/$(request.resource.data.listId)).data.collaborators ||
          exists(/databases/$(database)/documents/collaborations/$(get(/databases/$(database)/documents/lists/$(request.resource.data.listId)).data.userId + "_" + request.auth.uid)) ||
          (request.auth.token.email != null && exists(/databases/$(database)/documents/collaborations/$(get(/databases/$(database)/documents/lists/$(request.resource.data.listId)).data.userId + "_" + request.auth.token.email)))
        )
      );
    }
    
    match /pantry/{pantryId} {
      allow read, write, delete: if request.auth != null && (
        resource == null || 
        resource.data.userId == request.auth.uid ||
        exists(/databases/$(database)/documents/collaborations/$(resource.data.userId + "_" + request.auth.uid)) ||
        (request.auth.token.email != null && exists(/databases/$(database)/documents/collaborations/$(resource.data.userId + "_" + request.auth.token.email)))
      );
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
